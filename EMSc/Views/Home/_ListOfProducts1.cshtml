@model EMSc.Models.Products

<!-- #region datatables files -->


<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css" />
<script src="//cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>

<!-- #endregion -->



<table id="TB1" class="table table-striped table-bordered" cellspacing="0"> 
    <thead>
        <tr>
            @foreach (System.Data.DataColumn col in Model.dt.Columns)
            {
                <th>@col.Caption</th>
            }
            <th> </th>
        </tr>
    </thead>
    <tbody>
       
         
       @foreach (System.Data.DataRow row in Model.dt.Rows)
       {
            <tr>
                  
               @for (var i=0;i<row.ItemArray.Length;i++) {

                <td>
                @if (i==1) {
                    if (row[i].ToString().Length == 0)
                    { <text><a href="ebayIt/@row[0]"><img src="~/Content/img/ebayIt.png" height="30%"></a></text>  }
                    else { @row[i] }
                }
                else if (i == 2){<a href="Detail/@row[0]">@row[i]</a>}
                else { @row[i] }
                </td>

               }
                    <td> </td>
            </tr>
        }
    </tbody>
</table>
 <script type="text/javascript" charset="utf-8">
    $(document).ready(function () {
        $('#TB1').DataTable();
    });
</script>
