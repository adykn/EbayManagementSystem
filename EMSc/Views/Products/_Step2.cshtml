@model EMSc.Models.Products

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
     
         
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <style>
            textarea {
            width:90%;height:450px;max-width:1000px ;background-color:#f6f8c8;
            }
        </style>

        
        <div class="form-group" style="margin-top:50px;">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2", @style="max-width: 280px;" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "textArea"   } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        
         
    </div>
}
